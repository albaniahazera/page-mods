---
import IndexLayout from "../layouts/Index Layout.astro";
import Line from "../components/Line.astro"
const title = "Documentation"
---

<IndexLayout title={title} class:list="continer">
    <div>
        <h1>Documentation</h1>
        <Line/>
        <div class="title-content">
            <h2>
                Access mod page
                <Line/>
            </h2>
        </div>
        <div class="container-2">
            <p>When the first page opens, 
                You can click the button at the bottom center of the content, 
                to access the mod page.
            </p>
        </div>
