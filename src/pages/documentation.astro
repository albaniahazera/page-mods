<style>
    *{
        padding: 0;
        margin: 0;
    }

    h1 {
        font-family: 'Times New Roman', Times, serif;
        text-align: center;
    }

    h2 {
        margin: 10px 0px;
        font-size: larger;
    }

    .title-content {
        margin: 2px 3px;
        font-family: Arial, Helvetica, sans-serif;
        width: 200px;
    }
    
    .container-2 {
        font-family: Arial, Helvetica, sans-serif;
        margin: 5px 8px;
    }

    p {
        margin: 1px;
    }
</style>
