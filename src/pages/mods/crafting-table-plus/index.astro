    html {
        scroll-behavior: smooth;
    }

    * {
        margin: 0;
        padding: 0;
    }    
    
    body {
        background-color: #666;
        color: black;
    }

    .container {
        background-color: black;
        color: aqua;
    }

    .title {
        text-align: center;
    }

    h1 {
        font-family: 'Times New Roman', Times, serif;
        font-size: x-large;
        padding: 2px;
    }

    .container-h2 {
        margin-top: 8px;
        margin-left: 6px;
        background-color: black;
        border: 1px solid rgb(0, 255, 55);
        width: 250px;
    }

    h2 {
        font-family: 'Times New Roman', Times, serif;
        font-size: larger;
        text-align: center;
        color: white;
    }
    
    .container-teks {
        margin: 0px 6px;
        border: 1px solid aqua;
    }

    .container-downloads {
        display: flex;
    }
    
    .container-download {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 2px 6px;
    }
    
    .version-new {
        background-color: black;
        color: aqua;
        border: 1px solid rgb(0, 255, 55);
        width: 112px;
    }

    .version {
        background-color: black;
        color: white;
        border: 1px solid rgb(0, 255, 55);
        width: 112px;
    }

    h3 {
        font-family: 'Times New Roman', Times, serif;
        text-align: center;
    }
    

    h4 {
        margin: 0px 6px;
    }

    p {
        text-align: justify;
        margin: 4px 6px;
        font-family: Arial, Helvetica, sans-serif;
    }

    .changelog {
        margin: 0px 30px;
    }

    a {
        margin: 0px 6px;
    }

    .modrinth, .curse {
        margin: 4px 0px;
        background-color: #0e0d0dda;
        color: white;
    }

    .icon-modrinth {
        width: 70px;
        height: 70px;
        margin: 0px 6px;
    }

    .icon-curseforge {
        width: 115px;
        height: 70px;
        margin: 0px 6px;
    }

    .modrinth:hover {
        cursor: pointer;
        background-color: green;
    }

    .curse:hover {
        cursor: pointer;
        background-color: rgb(204, 53, 7);
    }

    .url-modrinth, .url-curse {
        display: flex;
        justify-content: center;
    }   

    .teks-download {
        text-align: justify;
    }

    .download-button {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    @media (max-width: 790px) {
        .container-downloads {
            flex-direction: column;
            display: flex;
            justify-content: center;
        }
        
        .container-download {
            justify-content: center;
        }
        
        .teks-download {
            text-align: center;
        }

        .download-button {
            justify-content: center;
        }

        .url-curse, .url-modrinth {
            justify-content: center;
        }
    }
</style> 